atom type Atom1()
	export port e0b0port AtoB(), CtoB()
	port e0b0port  BtoA(), AtoC()
	data int c
	
	place A, B, C
	 
	initial to A do { printState(c, "Atom1", "initial", "A", ""); 	}
	on AtoB from A to B do{ printState(c, "Atom1", "A", "B", "");  }
	on AtoC from A to C do{ printState(c, "Atom1", "A", "C", "");  }
	on CtoB from C to B do{ printState(c, "Atom1", "A", "C", "");  }
	on BtoA from B to A do{ printState(c, "Atom1", "B", "A", "");   }
end

atom type Atom2()
	export port e0b0port AtoB(), CtoB()
	port e0b0port  BtoA(), AtoC()

	data int c
	
	place A, B, C
	 
	initial to A do { printState(c, "Atom2", "initial", "A", ""); }
	on AtoB from A to B do{ printState(c, "Atom2", "A", "B", "");  }
	on AtoC from A to C do{ printState(c, "Atom2", "A", "C", "");  }
	on CtoB from C to B do{ printState(c, "Atom2", "C", "B", "");  }
	on BtoA from B to A do{ printState(c, "Atom2", "B", "A", "");  }
end



compound type comp()

	component Atom1 A1()
	component Atom2 A2()

	connector RDV2 bothAB(A1.AtoB,A2.AtoB)
	connector BRDCAST2 brdcastCB(A1.CtoB, A2.CtoB)
	
	
end


